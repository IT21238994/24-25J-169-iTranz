<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIC Fare Approval"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/passengerNicInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Passenger NIC"
        android:inputType="text"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"/>

    <EditText
        android:id="@+id/driverNicInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Driver NIC"
        android:inputType="text"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/startStopInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Start Stop"
        android:inputType="text"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/endStopInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter End Stop"
        android:inputType="text"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/sendRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:padding="12dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>
