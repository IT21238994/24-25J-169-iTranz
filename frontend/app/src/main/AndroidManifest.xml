<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itranz.fyp">  <!-- Updated package name -->

    <!-- Firebase permissions (if needed) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Declaring that the app uses the camera but does not require it -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.ITranz"
        tools:targetApi="31">

        <!-- MainActivity - Entry point of the app -->
        <activity
            android:name="com.itranz.fyp.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ITranz">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Additional Activities -->
        <activity android:name="com.itranz.fyp.activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.LoginActivity"
            android:exported="true"/>
        <activity android:name="com.itranz.fyp.activities.QRScannerActivity"
            android:exported="true"/>
        <activity android:name="com.itranz.fyp.activities.PaymentActivity"
            android:exported="true"/>
        <activity android:name="com.itranz.fyp.activities.SeatReservationActivity"
            android:exported="true"/>
        <activity android:name="com.itranz.fyp.activities.NICPaymentActivity"
            android:exported="true"/>
        <activity android:name="com.itranz.fyp.activities.AdminPanelActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.GenerateQRActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.PassengerApprovalActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.PassengerConfirmationActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.PaymentProcessingActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.PaymentRequestActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.SeatSelectionActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>
        <activity android:name="com.itranz.fyp.activities.UserDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.ITranz"/>

        <!-- Firebase Messaging Service -->
        <service
            android:name="com.itranz.fyp.services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
